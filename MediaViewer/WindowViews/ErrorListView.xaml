<Window x:Class="MediaViewer.ErrorListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media File Errors" Height="350" Width="500" Visibility="Hidden">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="472">
            <ListView x:Name="ErrorList" Height="246" Width="448" Loaded="ListViewLoaded">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="200,280,0,0" VerticalAlignment="Top" Width="75" Click="CloseView_Click"/>

    </Grid>
</Window>
