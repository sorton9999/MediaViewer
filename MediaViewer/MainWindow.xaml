<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MediaViewer" x:Class="MediaViewer.MainWindow"
        xmlns:wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
        Title="Media Viewer" Height="450" Width="1150" Closing="Window_Closing">
    <Grid>
        <!--
        <local:UserControl1 x:Name="mediaDetailsControl" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="300" Width="497"/>
        -->
        <GridSplitter HorizontalAlignment="Left" Margin="524,0,0,0" Width="8"/>
        <Button x:Name="Media_Button" Content="Find Media" HorizontalAlignment="Left" Margin="251,380,0,0" VerticalAlignment="Top" Width="75" Click="Media_Button_Click" RenderTransformOrigin="0.533,1.091">
            <Button.Style>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <ProgressBar x:Name="WorkProgressBar"  Height="22" Width="75" BorderBrush="Black" />
                                    <TextBlock Background="Transparent" Text="Find Media" Foreground="Black" TextAlignment="Center" Padding="0,3,0,0" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="Exit_Button" Content="Exit" HorizontalAlignment="Left" Margin="352,380,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Button_Click"/>
        <local:LibraryTreeControl x:Name="libraryTreeControl" HorizontalAlignment="Left" Height="400" Margin="546,10,0,0" VerticalAlignment="Top" Width="295"/>
        <Button Content="Edit Library ..." HorizontalAlignment="Left" Margin="143,380,0,0" VerticalAlignment="Top" Width="82" Click="Library_Button_Click"/>
        <Button x:Name="Config_Button" Content="Config ..." HorizontalAlignment="Left" Margin="40,380,0,0" VerticalAlignment="Top" Width="75" Click="Config_Button_Click"/>
        <Button x:Name="Pause_Button" Content="" HorizontalAlignment="Left" Margin="61,323,0,0" VerticalAlignment="Top" Width="32" Click="OnPauseButtonClick" Height="32">
            <Button.Background>
                <ImageBrush ImageSource="Images/pause_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Play_Button" HorizontalAlignment="Left" Margin="100,323,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="OnPlayButtonClick">
            <Button.Background>
                <ImageBrush ImageSource="Images/play_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="FF_Button" HorizontalAlignment="Left" Margin="139,323,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="OnFastForwardButtonClick">
            <Button.Background>
                <ImageBrush ImageSource="Images/fastforward_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="RW_Button" HorizontalAlignment="Left" Margin="178,323,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="OnRewindButtonClick">
            <Button.Background>
                <ImageBrush ImageSource="Images/rewind_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="Stop_Button" HorizontalAlignment="Left" Margin="22,323,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="OnStopButtonClick">
            <Button.Background>
                <ImageBrush ImageSource="Images/stop_button.png"/>
            </Button.Background>
        </Button>
        <Slider x:Name="progressSlider" HorizontalAlignment="Left" Margin="217,328,0,0" VerticalAlignment="Top" Width="242" Maximum="100"/>
        <Label x:Name="Time_Label" Content="00:00:00" HorizontalAlignment="Left" Margin="464,326,0,0" VerticalAlignment="Top" Width="61" HorizontalContentAlignment="Right"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="308" Margin="7,10,0,0" VerticalAlignment="Top" Width="509">
            <TabItem x:Name="mediaTab" Header="Media" AllowDrop="True">
                <Grid Background="#FFE5E5E5">
                    <wpf:VlcControl x:Name="myControl" HorizontalAlignment="Left" VerticalAlignment="Top" Height="276" Width="499"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="detailsTab" Header="Details">
                <Grid Background="#FFE5E5E5">
                    <local:UserControl1 x:Name="mediaDetailsControl" HorizontalAlignment="Left" VerticalAlignment="Top" Width="499" Height="276"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Left" Height="400" Margin="546,10,0,0" VerticalAlignment="Top" Width="586">
            <Frame x:Name="frame" Content="Play List" HorizontalAlignment="Left" Height="400" Margin="298,0,0,0" VerticalAlignment="Top" Width="288"/>
            <ListView x:Name="playListView" HorizontalAlignment="Left" Height="369" Margin="307,21,0,0" VerticalAlignment="Top" Width="269">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Song" DisplayMemberBinding="{Binding Song}" Width="200"/>
                        <GridViewColumn Header="Length" DisplayMemberBinding="{Binding Length}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
